%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for([:admin, @video], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-6") do |f|
          %ul.nav.nav-tabs
            %li
              = link_to "Recent Payments", admin_payments_path
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            = f.text_field :title, class: "col-sm-3"
            .form-group
              = label_tag "category_id", "Category", class: "control-label col-sm-3"
              .col-sm-6
                = select_tag "category_id", options_for_select(Category.all.map {|category| [category.name, category.id]}), class: "form-control"
            = f.text_area :description, rows: 8, class: "col-sm-6"
            = f.file_field :large_cover, class: "btn btn=file"
            = f.file_field :small_cover, class: "btn btn=file"
            = f.text_field :video_url, class: "col-sm-3"

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
